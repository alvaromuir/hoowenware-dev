<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html: {class: 'sign_in', id: 'sign_in_form' }) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>
<hr />
<p>
  Or sign in with:<br />
  <%= link_to "Facebook", user_omniauth_authorize_path(:facebook) %>
  <%= link_to "Google", user_omniauth_authorize_path(:google_oauth2) %>
</p>

