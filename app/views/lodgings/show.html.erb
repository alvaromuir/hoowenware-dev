    <% if @lodging.notes %>
      Notes: <%= @lodging.notes %>
    <% end %>
  </div>
  <div>
    <% if @lodging.checkin_time %>
      Checkin Time: <%= @lodging.checkin_time.strftime("%I:%m%p") %>
