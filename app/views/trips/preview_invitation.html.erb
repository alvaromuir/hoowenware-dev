<h4>Preview Message</h4>

<div>
<%= @trip.user %> has invited you to join
<% if @trip.user.gender %>
@trip.user.gende
<% else %>
a
<% end %> trip!
</div>
<div>
  <%= @trip.title %>
</div>
<div>
  <%= @trip.location %>
  <% if @location_options %>
    or
    <% @location_options.each do |poll| %>
      <%= poll.location %>
    <% end %>
  <% end %>
</div>
<div>
  <%= @trip.start_date.to_date.strftime("%m/%d/%y") %> - <%= @trip.end_date.to_date.strftime("%m/%d/%y") %>
  <% if @dates_options %>
    or 
    <% @dates_options.each do |poll| %>
      <%= poll.start_date.to_date.strftime("%m/%d/%y") %> -
      <%= poll.end_date.to_date.strftime("%m/%d/%y") %>
    <% end %>
  <% end %>
</div>

<div>
  <%= link_to "View Trip", trip_path(@trip) %>
</div>