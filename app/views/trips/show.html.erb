  <% title(@trip.title, "Trips") %>
  <div id="trip">
  <h4><%= @trip.title %> (<%= @trip.hash_tag %>)</h4>
  <span class='creator'>
    Planned by <%= @trip.user %>
  </span>
  <p class='location'>(<%= @trip.location %>)</p>
  <p class='dates'>
    ( <%= @trip.start_date.to_date.strftime("%m/%d/%y")  %>  | <%= @trip.end_date.to_date.strftime("%m/%d/%y") %> )
  </p>

  <ul>
    <li><%= link_to "Settings", edit_trip_path(@trip) %></li>
    <li>
    <% if @trip.is_active? %>
      <%= link_to "Cancel this trip", trip_cancel_path(trip_id: @trip.id) %>
    <% else %>
      <%= link_to "Reactivate this trip", trip_reactivate_path(trip_id: @trip.id) %>
    <% end %>
    </li>
    <% if current_user.is_admin? %>
    <li>
        <%= link_to "Delete This trip",
              trip_path(@trip),
              method: :delete,
              data: { confirm:
                      "Are you sure you want to cancel this trip?"
                    }%>
    </li>
    <% end %>
  </div>