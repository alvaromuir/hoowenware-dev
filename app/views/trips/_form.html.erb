  <%= form_for @trip, html: { 'data-abide'=> 'ajax', multipart: true, id: 'new_trip_form' } do |f| %>
    <% if @trip.errors.any? %>
      <div id="error_explanation">
        <h4>
          <%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:
        </h4>
        <ul>
          <% @trip.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= f.label :title, 'Trip Title:' %>
      <%= f.text_field :title, :required => true %>
    </div>
    <div>
      <%= f.label :hash_tag, 'Hashtag:' %>
      <%= f.text_field :hash_tag%>
    </div>
    <div>
      <%= f.label :start_date, 'Start:' %>
      <%= f.text_field :start_date, :required => true %>
    </div>
    <div>
      <%= f.label :end_date, 'End:' %>
      <%= f.text_field :end_date, :required => true %>
    </div>
    <div>
      <%= f.label :location, 'Location:' %>
      <%= f.text_field :location, :required => true %>
    </div>
    <div>
      <%= f.label :is_private, 'Privacy:' %>
      <%= f.select :is_private, [['private', true], ['public', false]] %>
    </div>
    <div>
      <%= f.label :hide_guestlist, 'Hide Guestlist?' %>
      <%= f.check_box :hide_guestlist%>
    </div>
    <div>
      <div>
        <% if @trip.new_record? %>
          <%= f.submit 'Create', :class => 'button small radius success'%>
        <% else %>
          <%= f.submit 'Update', :class => 'button small radius success'%>
        <% end %>
      </div>
      <div>
        <%= button_tag "Cancel",
                      type: :reset, 
                      :class => "button small radius alert", 
                      :id => "cancel_new_trip_btn"%>
      </div>
    </div>
  <% end %>