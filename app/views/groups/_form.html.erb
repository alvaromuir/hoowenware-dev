  <%= form_for @group, html: {multipart: true, id: 'new_group_form' } do |f| %>
    <% if @group.errors.any? %>
      <div id="error_explanation">
        <h4>
          <%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:
        </h4>
        <ul>
          <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= f.label :name, 'Group Name:' %><br />
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description, 'Group Description:' %><br />
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :location, 'Group Location:' %><br />
      <%= f.text_field :location %>
    </div>
    <div>
      <%= f.label :group_type, 'Group Type:' %><br />
      <%= f.text_field :group_type %>
    </div>
    <div>
      <%= f.label :avatar, 'Group Avatar:' %><br />
      <%= f.text_field :avatar %>
    </div>
    <div>
      <%= f.label :facebook_url, 'Facebook Link:' %><br />
      <%= f.text_field :facebook_url %>
    </div>
    <div>
      <%= f.label :meetup_url, 'Meetup Link:' %><br />
      <%= f.text_field :meetup_url %>
    </div>
    <div>
      <%= f.label :groupme_id, 'GroupMe ID:' %><br />
      <%= f.text_field :groupme_id %>
    </div>
    <hr />
    <div>
      <div>
        <% if @group.new_record? %>
          <%= f.submit 'Create'%>
        <% else %>
          <%= f.submit 'Update'%>
        <% end %>
        <%= button_tag "Reset", type: :reset%>
        <%= f.submit "Cancel"%>
      </div>
    </div>
  <% end %>